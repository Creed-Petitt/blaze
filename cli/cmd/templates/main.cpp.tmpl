#include <blaze/app.h>
#include <iostream>

/**
 * DATABASE DRIVERS:
 * To use databases, uncomment the following:
 * #include <blaze/postgres.h>
 * #include <blaze/mysql.h>
 */

using namespace blaze;

int main() {
    App app;

    // Modern API: Async Returns & Auto-Serialization
    app.get("/", []() -> Async<Json> {
        co_return Json({
            {"status", "ok"},
            {"message", "Welcome to Blaze!"}
        });
    });

    std::cout << "Starting server on http://localhost:8080" << std::endl;
    
    // Start the server on port 8080
    app.listen(8080);

    return 0;
}